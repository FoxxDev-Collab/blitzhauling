// Blitz Hauling Database Schema
// Full-stack SaaS platform for hauling and junk removal business

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management & Authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  jobs      Job[]
  invoices  Invoice[]
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

// Customer Management
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  address   String?
  city      String?
  state     String?
  zipCode   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  jobs      Job[]
  invoices  Invoice[]
}

// Service Offerings
model Service {
  id          String  @id @default(cuid())
  name        String
  description String?
  basePrice   Float
  active      Boolean @default(true)

  // Relations
  jobItems JobItem[]
}

// Job/Project Management
model Job {
  id          String    @id @default(cuid())
  jobNumber   String    @unique
  customerId  String
  assignedTo  String?
  status      JobStatus @default(PENDING)
  scheduledAt DateTime?
  completedAt DateTime?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  customer     Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  assignedUser User?      @relation(fields: [assignedTo], references: [id])
  jobItems     JobItem[]
  invoice      Invoice?

  @@index([customerId])
  @@index([assignedTo])
  @@index([status])
}

enum JobStatus {
  PENDING
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Job Line Items
model JobItem {
  id          String  @id @default(cuid())
  jobId       String
  serviceId   String
  quantity    Int     @default(1)
  unitPrice   Float
  description String?

  // Relations
  job     Job     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id])

  @@index([jobId])
}

// Billing & Invoicing
model Invoice {
  id           String        @id @default(cuid())
  invoiceNumber String       @unique
  jobId        String        @unique
  customerId   String
  issuedBy     String?
  subtotal     Float
  tax          Float         @default(0)
  total        Float
  status       InvoiceStatus @default(DRAFT)
  issuedAt     DateTime?
  dueAt        DateTime?
  paidAt       DateTime?
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relations
  job      Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  customer Customer  @relation(fields: [customerId], references: [id])
  issuedByUser User? @relation(fields: [issuedBy], references: [id])

  @@index([customerId])
  @@index([status])
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

// Contact Form Submissions (from website)
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

enum ContactStatus {
  NEW
  CONTACTED
  CONVERTED
  ARCHIVED
}
